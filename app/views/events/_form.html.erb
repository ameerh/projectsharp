<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :event_datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :event_datetime, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gamenumber, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gamenumber, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sporttype, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sporttype, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :league, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :league, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_live, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_live, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
