<%= form_for @previews_rule, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :rule_for, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:rule_for, @rules_for) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :split, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:split, @split_list) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :column, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:column, @column) %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls" style="margin-left: 100px;">
      <h4>Condition 1</h4>
    </div>  
    <div class="controls" style="float:left">
      <p>Operator</p>
      <%= f.select(:operator1, @operators) %>
    </div>  
    <div class="controls" style="float:left; margin-left: 25px;">
      <p>Value</p>
      <%= f.text_field :value1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls" style="margin-left: 100px;">
      <h4>Condition 2 (And)</h4>
    </div>  
    <div class="controls" style="float:left">
      <p>Operator</p>
      <%= f.select(:operator2, @operators) %>
    </div>  
    <div class="controls" style="float:left; margin-left: 25px;">
      <p>Value</p>
      <%= f.text_field :value2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :statement, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :statement, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                previews_rules_path, :class => 'btn' %>
  </div>
<% end %>
