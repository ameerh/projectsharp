<%= form_for @previews_rule, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :split, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :split, @split_list, :first, :last %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :column, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :column, @column, :first, :last %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :operator, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :operator, @operators, :first, :last %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :statement, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :statement, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                previews_rules_path, :class => 'btn' %>
  </div>
<% end %>
