<%- model_class = PreviewsRule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:split) %>:</strong></dt>
  <dd><%= @previews_rule.split %></dd>
  <dt><strong><%= model_class.human_attribute_name(:column) %>:</strong></dt>
  <dd><%= @previews_rule.column %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operator1) %>:</strong></dt>
  <dd><%= @previews_rule.operator1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value1) %>:</strong></dt>
  <dd><%= @previews_rule.value1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:statement) %>:</strong></dt>
  <dd><%= @previews_rule.statement %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operator2) %>:</strong></dt>
  <dd><%= @previews_rule.operator2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value2) %>:</strong></dt>
  <dd><%= @previews_rule.value2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rule_for) %>:</strong></dt>
  <dd><%= @previews_rule.rule_for %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              previews_rules_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_previews_rule_path(@previews_rule), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              previews_rule_path(@previews_rule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
