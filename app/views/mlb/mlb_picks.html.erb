        <% if !@team_a_stats.first.nil? %>
          <p class="position">
          <% if !@pitcher_a_season_totals.first.nil? %>
            <%= "(#{@pitcher_a_season_totals.first.W}-#{@pitcher_a_season_totals.first.L})" %> ERA <%= @pitcher_a_season_totals.first.ERA%>
          <% end %>
          </p>
        <% end %>  
      <% end %>
    </div>  

    <div id="pitcher_h" class="right aright">
      <% if !@pitcher_h.nil? %>
