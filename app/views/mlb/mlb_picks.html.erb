    </div>  
    <div class="clear"></div>
  </div>

  <% if @event.present? && @event.periods.present? %>
    <div id="odds">
      <div id="team_a" class="left aleft">
          <p class="value"><%= @event.periods[0].moneyline_visiting %></p>
      </div>  
      <div class="middle aleft">
        <p class="odds"><u>ODDS</u></p>      
        <p>Total</p>      
