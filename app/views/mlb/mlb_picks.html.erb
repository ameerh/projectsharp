          <% if !@team_h_stats.nil? %>
            (<%= @team_h_stats.first.record %>)
          <% end %>  
          <%= @team_h_stats.first.position %></p>
        <% end %>  
      <% end %>
    </div>  
    <div class="clear"></div>
  </div>

  <div id="pitchers">
